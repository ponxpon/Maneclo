<%= render 'brand', brand: @brand %>
<div class="container">
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ブランド</th>
          <th>着数</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <!--ブランド一覧表示-->
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.brand_name %></td>
            <td><%= brand.items.count %></td>
            <td><%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

