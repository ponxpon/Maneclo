<header>
  <!--ナビゲーションバー-->
  <nav class="navbar navbar-expand-lg navbar-dark text-light" style="background-color:#1C4946;">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <span>Maneclo</span>
    <% end %>
    <!--ハンバーガーメニュー-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto mx-3">
        <% if user_signed_in? %>
          <li><%= link_to "About", homes_about_path, class: 'nav-link' %></li>
          <li><%= link_to "Contact", homes_contact_path, class: 'nav-link' %></li>
          <li><%= link_to "Logout", destroy_user_session_path, class: 'nav-link', method: :delete %></li>
        <% else %>
          <li><%= link_to "Home", root_path, class: 'nav-link' %></li>
          <li><%= link_to "About", homes_about_path, class: 'nav-link' %></li>
          <li><%= link_to "Contact", homes_contact_path, class: 'nav-link' %></li>
          <li><%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %></li>
          <li><%= link_to "Login", new_user_session_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>