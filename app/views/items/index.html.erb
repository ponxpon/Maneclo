
<% @items.each do |item| %>
  <div>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :item_image, format: 'jpeg', size: "100x100" %>
    <% end %>
    <p>ブランド名:<%= item.brand.brand_name %></p>
    <p>カテゴリー名:<%= item.category.category_name %></p>
    <p>¥<%= item.price %></p>
  </div>
<% end %>
